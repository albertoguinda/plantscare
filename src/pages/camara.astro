---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import VideoComponent from "@/components/VideoComponent";
import Clasificaciones from "@/components/Clasificaciones";
import Footer from "@/components/Footer.astro";

//const host = "192.168.10.8"; // CAMPUS
const host = "192.168.10.37"; // CAMPUS
const endpoints = {
  stream: `http://${host}/stream`,
  capture: `http://${host}/capture`,
  restart: `http://${host}/restart`,
  wifi: `http://${host}/wifi`,
};
const title = "Cámara de visión artificial y videovigilancia";
---

<Layout>
  <Header />
  <VideoComponent client:load title={title} endpoints={endpoints} />
  <Clasificaciones client:load />
  <Footer />
</Layout>
